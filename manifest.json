{
  "manifest_version": 3,
  "name": "JSON Formatter Pro",
  "version": "1.0.0",
  "description": "Format, validate, diff JSON with tree view, query, convert & 60+ themes. The ultimate JSON toolkit for developers.",
  "author": "JSON Formatter Pro Team",
  "homepage_url": "https://github.com/your-repo/json-formatter-pro",

  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },

  "permissions": [
    "storage",
    "clipboardWrite",
    "activeTab",
    "contextMenus"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    },
    "default_title": "JSON Formatter Pro"
  },

  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_end"
    }
  ],

  "options_page": "options/options.html",

  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "src/css/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+J",
        "mac": "Command+Shift+J"
      },
      "description": "Open JSON Formatter Pro"
    },
    "format_json": {
      "suggested_key": {
        "default": "Alt+Shift+F",
        "mac": "Alt+Shift+F"
      },
      "description": "Format JSON"
    },
    "toggle_theme": {
      "suggested_key": {
        "default": "Alt+Shift+D",
        "mac": "Alt+Shift+D"
      },
      "description": "Toggle Dark Mode"
    }
  }
}
